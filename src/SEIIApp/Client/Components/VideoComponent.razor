@using SEIIApp.Shared;

<h4>Videos</h4>

<EditForm Model="VideoContentDTO">
    <DataAnnotationsValidator />

    @if (OnEditing)
    {
        <label>Video-Link</label>
        <InputText @bind-Value="VideoContentDTO.Path"></InputText>        
        <br />
    }

    @if (VideoContentDTO.Path != null) 
    {
        @if(VideoContentDTO.Path.Contains("youtube.com/watch"))
        {
            VideoContentDTO.Path = VideoContentDTO.Path.Substring(VideoContentDTO.Path.IndexOf('=') + 1);
        } else if ( VideoContentDTO.Path.Contains("https://youtu.be"))
        {
            VideoContentDTO.Path = VideoContentDTO.Path.Substring("https://youtu.be/".Length);
        }
        <iframe width="560" height="315" src=@("https://www.youtube.com/embed/" + VideoContentDTO.Path) title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <br />
    }

    @if (OnEditing)
    {
        <label>Description</label>
        <InputText @bind-Value="VideoContentDTO.Description"></InputText>
    }
    else
    {
        <p>@VideoContentDTO.Description</p>
    }

    <ValidationSummary />
</EditForm>


@code {
    [Parameter]
    public VideoContentDTO VideoContentDTO { get; set; }

    public static bool OnEditing = false; 

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

}
