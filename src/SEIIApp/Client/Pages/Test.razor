@code {

    public CompletedTestDTO[] AllTestList { get; set; }
    DataItem[] maxPointList { get; set; }
    DataItem[] testList { get ; set; }

    class DataItem
    {
        public string TestName { get; set; }
        public double ReachedPoints { get; set; }
    }


    [Parameter]
    public List<NewsDTO> News { get; set; }

    public int[] Roles { get; set; }

    [Parameter]
    public int userID { get; set; }

    private List<ToDoDTO> ToDo { get; set; }


    private async void GetToDos()
    {

        ToDo = await ToDoService.GetToDosByAuthor(MyUserService.User.UserId);
    }


    private string newTodo;

    private async void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            ToDoDTO tmp = new ToDoDTO();
            tmp.Task = newTodo;
            tmp.Author = MyUserService.User;
            await ToDoService.AddOrUpdateToDo(tmp);
            newTodo = string.Empty;
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();
        AllTestList = await CompletedTestService.GetCompletedTestsWithUserId(7);
        CreateDataItems();

        StateHasChanged();
    }

    private void CreateDataItems()
    {
        testList = new DataItem[AllTestList.Length];
        maxPointList = new DataItem[AllTestList.Length];
        int count = 0;
        foreach(var test in AllTestList)
        {
            testList[count] = new DataItem() { TestName = test.SolvedTest.Topic, ReachedPoints = test.ReachedPoints };
            maxPointList[count] = new DataItem() { TestName = test.SolvedTest.Topic, ReachedPoints = test.MaxPoints };
            count++;
        }
    }



